<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="local.test.springboot.shopping.repository.ProductRepository">

    <select id="findById" parameterType="java.lang.Integer" resultType="local.test.springboot.shopping.entity.Product">
        select * from easybuy_product where id = #{id}
    </select>


    <select id="findAllByKeyWord" parameterType="java.lang.String" resultType="local.test.springboot.shopping.entity.Product">
        select * from easybuy_product where name like "%"#{keyWord}"%"
    </select>

</mapper>
